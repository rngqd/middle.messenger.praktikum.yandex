{
  "compilerOptions": {
    "target": "es2017",
    "strictPropertyInitialization": false,
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "typeRoots": [
      "node_modules/@types",
      "./index.d.ts"
    ],
    "types": ["mocha", "node"]
  },
  "ts-node": {
    "files": true
  }
}

