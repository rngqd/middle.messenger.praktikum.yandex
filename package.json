{
  "name": "middle.messenger.praktikum.yandex",
  "version": "1.0.0",
  "description": "Учебный проект мессенджера для обмена realtime сообщениями",
  "scripts": {
    "dev": "webpack  --mode=development --progress  && webpack serve",
    "build": "webpack --mode=production",
    "start": "npm run build && node ./server.js",
    "prettier": "prettier 'src/**/*.ts'",
    "prettier:fix": "prettier --write 'src/**/*.ts'",
    "checks": "npm-run-all prettier",
    "stylelint": "stylelint \"**/*.sass\"",
    "test": "mocha --require ts-node/register --require ./mochaSetup.js './src/**/*.test.ts'",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all stylelint prettier:fix test"
    }
  },
  "author": "Alexandr Mykovnya",
  "license": "ISC",
  "devDependencies": {
    "@types/body-parser": "1.19.2",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.8.3",
    "@types/sinon": "^10.0.15",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "chai": "^4.3.7",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.25.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-plugin-prettier": "4.2.1",
    "html-webpack-plugin": "^5.5.1",
    "husky": "^8.0.0",
    "jsdom": "^22.1.0",
    "mocha": "^10.2.0",
    "prettier": "2.7.1",
    "sass": "^1.54.5",
    "sass-loader": "^13.3.1",
    "sinon": "^15.1.0",
    "style-loader": "^3.3.3",
    "stylelint": "15.6.2",
    "stylelint-config-sass-guidelines": "10.0.0",
    "ts-loader": "9.4.1",
    "ts-node": "^10.9.1",
    "typescript": "4.8.4",
    "webpack": "5.75.0",
    "webpack-cli": "4.10.0",
    "webpack-dev-server": "4.11.1"
  },
  "dependencies": {
    "express": "^4.18.1",
    "handlebars": "^4.7.7",
    "nanoid": "3"
  }
}
